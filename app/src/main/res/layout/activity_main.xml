<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.baliyaan.android.wordincontext.MainActivity">

    <android.support.v7.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:background="#aaaaaa"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <com.baliyaan.android.wordincontext.Components.Definition.UI.DefinitionView
        android:id="@+id/definition_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_view"/>


    <com.baliyaan.android.wordincontext.Components.Examples.UI.ExamplesView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/definition_view" />

</android.support.percent.PercentRelativeLayout>
